<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NotesApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dDarkBlue</item>
        <item name="colorPrimaryVariant">@color/dDarkBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/d2Black</item>
        <item name="colorSecondaryVariant">@color/d2Black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="removeSplashScreenTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="ProgressBar">
        <item name="colorSecondary">@color/black</item>
    </style>

    <style name="fabButton">
        <item name="colorSecondary">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="srcCompat">@drawable/ic_add_white_24</item>
        <item name="elevation">@dimen/_4sdp</item>
    </style>

    <style name="BottomSheetStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Modal</item>
    </style>

    <style name="Modal" parent="Theme.Design.BottomSheetDialog">
        <item name="android:background">@drawable/delete_sheet</item>
    </style>
</resources>